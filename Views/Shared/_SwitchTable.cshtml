
<table id="tblRaw">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
    </tr>

    @foreach (var rawData in Model)
    {

        <tr class="dataFromRow" data-toggle="modal" data-target="#myModal">
            <td>@rawData.Name</td>
            <td>@rawData.Description</td>
            @if (@rawData.Status == true)
            {
                <td>Active</td>
            }
            else
            {
                <td>Inactive</td>
            }
        </tr>

    }
</table>

<script>

    getRow();

    function getRow() {

        var table = document.getElementById('tblRaw'), rIndex;
        for (var i = 0; i < table.rows.length; i++) {
            table.rows[i].onclick = function () {
                //debugger
                rIndex = this.rowIndex;

               // console.log(rIndex);
                document.getElementById('toModalName').innerHTML = this.cells[0].textContent;
                document.getElementById('toModalDescription').innerHTML = this.cells[1].textContent;
                var status = this.cells[2].textContent;
                if (status == "Active") {
                    document.getElementById('status').checked = true;
                }
                else if (status == "Inactive") {
                    document.getElementById('status').checked = false;
                }
            };
        }

    }
</script>